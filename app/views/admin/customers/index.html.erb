<p id="notice"></p>
  <div class="container text-center">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">会員一覧</div>
　　</div>


　　<table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted == false %>
          <p class="text-success">有効</p>
        <% else %>
           <p class="text-secondary">退会</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>



</div>
  <%= paginate @customers %>
<%= form_with model: @customer, url: admin_customer_path do |f| %>

<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">
        <%= @customer.last_name %>
        <%= @customer.first_name %>さん
        会員詳細</div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-3">
      <div class="col-2">
        会員ID
      </div>
      <div class="col-2">
        <%= @customer.id %>
      </div>
    </div>


    <div class="row mt-3">
      <div class="col-2">
        氏名
      </div>
      <div class="col-2">
        <%= @customer.last_name %>
        <%= @customer.first_name %>
       </div>
    </div>



    <div class="row mt-3">
      <div class="col-2">
        フリガナ
      </div>
      <div class="col-2">
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
       </div>
    </div>



    <div class="row mt-3">
      <div class="col-2">
        郵便番号
      </div>
      <div class="col-2">
        <%= @customer.postal_code %>
       </div>
    </div>




    <div class="row mt-3">
      <div class="col-2">
        住所
      </div>
      <div class="col-2">
        <%= @customer.address %>
       </div>
    </div>




    <div class="row mt-3">
      <div class="col-2">
        電話番号
      </div>
      <div class="col-2">
        <%= @customer.telephone_number %>
       </div>
    </div>




    <div class="row mt-2">
      <div class="col-2">
        メールアドレス
      </div>
      <div class="col-2">
        <%= @customer.email %>
      </div>
    </div>



    <div class="row mt-2">
      <div class="col-2">
        会員ステータス
      </div>
      <div class="col-2">
        <% if @customer.is_deleted == false %>
          <p class="text-success">有効</p>
        <% else %>
          <p class="text-secondary">退会</p>
        <% end %>
      </div>
    </div>



    <div class="row">
      <div class="col-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
      </div>
      <div class="col">
      <%= link_to "注文履歴一覧を見る", admin_top_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>



  <% end %>


  <p id="notice"></p>
  <div class="container text-center">
    <div class="row">
      <div class="col-2">
        <div class="p-3 mb-2 bg-secondary text-light">商品一覧</div>
      </div>


      <div class="col text-right">
        <%= link_to new_admin_item_path do %>
         <i class="fas fa-plus-circle fa-2x"></i>
        <% end %>
      </div>
    </div>

    <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>



    <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active == true %>
        <p class="text-success">販売中</p>
        <% else %>
        <p class="text-secondary">販売停止中</p>
        <% end %>
      </td>
    </tr>

    <% end %>

    </tbody>

    </table>
  </div>
<%= paginate @items %>
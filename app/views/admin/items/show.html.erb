
<p id="notice"></p>
  <div class="container text-center">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">商品詳細</div>
    </div>
  </div>

<div class="container">
  <div class="row mt-3 justify-content-center">
    <div class="col-4">

  <%= image_tag @item.image %>
  </div>


<div class="col-8">
  <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        商品名
      </div>
      <div class="col-4">
        <%= @item.name %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        商品説明
      </div>
      <div class="col-4">
        <%= @item.introduction %>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        ジャンル
      </div>
      <div class="col-4">
        <%= @item.genre.name %>
      </div>
    </div>
  </div>

<% @items.each do |item| %>


  <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        税込価格<br />
        (税抜き)
      </div>
      <div class="col-4">
        <%= item.with_tax_price %><br />
        <%= @item.price %>
      </div>
    </div>
  </div>

  <% end %>



  <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        販売ステータス
      </div>
      <div class="col-4">
        <% if @item.is_active == true %>
          <p class="text-success">販売中</p>
        <% else %>
          <p class="text-secondary">販売停止中</p>
        <% end %>
      </div>
    </div>
  </div>


  <div class="container ">
    <div class="row mt-2 ml-5">
      <div class="col-2">
      <div><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %></div>
      </div>
    </div>
  </div>


</div>
</div>
</div>


  <p id="notice"></p>
  <div class="container text-center">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">商品詳細</div>
　　</div>
　</div>


　<%= form_with model: @item, url: admin_items_path do |f| %>


  <%= image_tag @item.image %>


  <div class="container">
    <div class="row mt-3 justify-content-center">
      <div class="col-2">
        商品名
      </div>
      <div class="col-2">
        <%= @item.name %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-2 justify-content-center">
      <div class="col-2">
        商品説明
      </div>
      <div class="col-2">
        <%= @item.introduction %>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row mt-2 justify-content-center">
      <div class="col-2">
        ジャンル
      </div>
      <div class="col-2">
        <%= @item.genre.name %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-2 justify-content-center">
      <div class="col-2">
        税抜価格
      </div>
      <div class="col-2">
        <%= @item.price %>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row mt-2 justify-content-center">
      <div class="col-2">
        販売ステータス
      </div>
      <div class="col-2">
        <% if @item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row mt-2 justify-content-center">
      <div class="col-2">
      <div><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %></div>
      </div>
    </div>
  </div>


　<% end %>
  <div class="container text-center">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">注文履歴詳細</div>
　　</div>


  <%= form_with model: @order, url: admin_orders_path do |f| %>

  <div class="container">
    <div class="row mt-3 justify-content-center">
      <div class="col-2">
        購入者
      </div>
      <div class="col-2">
        <%=  @order.customer_id %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-3 justify-content-center">
      <div class="col-2">
        注文日
      </div>
      <div class="col-2">
        <%= @order.created_at %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-3 justify-content-center">
      <div class="col-2">
        配送先
      </div>
      <div class="col-2">
        <%= @order.postal_cade %>
        <%= @order.address %>
        <%= @order.name %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-3 justify-content-center">
      <div class="col-2">
        支払方法
      </div>
      <div class="col-2">
        <%= @order.payment_method %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-3 justify-content-center">
      <div class="col-2">
        注文ステータス
      </div>
      <div class="col-2">
        <%= @order.status %>
      </div>
    </div>
  </div>



  <% end %>





<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-x1-6">


<h2>管理者ログイン</h2>

<tr>
  <td>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">

  <%= f.label :メールアドレス %><br />

  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

  </div>

  <div class="field">
    <tr><%= f.label :パスワード %><br /></tr>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <div><%= link_to "ログイン", admin_top_path, class: "btn btn-primary" %></div>
  </div>
<% end %>

<%= render "admin/shared/links" %>

      </div>
    </div>
  </div>
</main>


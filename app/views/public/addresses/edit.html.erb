<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">配送先編集</div>
    </div>
  </div>



<%= form_with model: @address, url: public_address_path do |f| %>

  <div class="container">

    <div class="row mt-3">
      <div class="col-3">
        郵便番号(ハイフンなし)
      </div>
      <div class="col-2">
        <%= f.text_field :postal_code, placeholder: "000000" %>
      </div>
    </div>



    <div class="row mt-3">
      <div class="col-3">
        住所
      </div>
      <div class="col-2">
        <%= f.text_field :address, placeholder: "東京都千代田区" %>
      </div>
    </div>



    <div class="row mt-3">
      <div class="col-3">
        宛名
      </div>
      <div class="col-3">
        <%= f.text_field :name, placeholder: "山田花子" %>
      </div>
      <div class="col-3">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
    </div>

</div>

  <% end %>


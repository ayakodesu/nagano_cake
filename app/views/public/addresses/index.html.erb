<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">配送先登録/一覧</div>
　　</div>
　</div>

　<%= form_with model: @address, url: public_addresses_path do |f| %>

　<div class="container">
    <div class="row mt-3">
      <div class="col-3">
        郵便番号(ハイフンなし)
      </div>
      <div class="col-2">
      <%= f.text_field :postal_code, placeholder: "000000" %>
      </div>


  <div class="container">
    <div class="row mt-3">
      <div class="col-3">
        住所
      </div>
      <div class="col-2">
      <%= f.text_field :address, placeholder: "東京都千代田区" %>
      </div>


  <div class="container">
    <div class="row mt-3">
      <div class="col-3">
        宛名
      </div>
      <div class="col-3">
      <%= f.text_field :name %>

      <%= f.hidden_field :customer_id, :value => current_customer.id %>


      </div>
      <div class="col-3">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>



  <% end %>


<div class="container">
  <div class="row mt-4 text-left">
    <table border="1" style="border-collapse: collapse">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </thead>




    <tbody>
      <% @addresses.each do |address| %>
      <tr>

        <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
            <td><%= address.name %></td>
                <td><%= link_to "編集する", edit_public_address_path(address.id), class: "btn btn-sm btn-success" %></td>
                  <td><%= link_to "削除する", public_destroy_address_path(address.id), method: :delete, class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>

      </tr>
      <% end %>
    </tbody>


</table>
  </div>
</div>


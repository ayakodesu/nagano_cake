<p id="notice"></p>
  <div class="container text-center">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">ショッピングカート</div>
　　</div>

　<table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>




    <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>

      <% @cart_items.each do |cart_item| %>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>

    </tr>
    <% end %>
    <% end %>
  </tbody>

  </table>
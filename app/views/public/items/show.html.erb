
<%= form_with model: @item, url: public_cart_items_path do |f| %>

<div class="container justify-content-center ">
    <div class="row">
      <div class="col-4">
<%= image_tag @item.image, size: '200x200' %>
      </div>

    <div class="col-3">
      <div class="mt-5 mb-5">

        <div><%= @item.name %></div>
        </div>

        <div class="mb-5">

        <div><%= @item.introduction %></div>
        </div>


        <div class="mb-5">
        <div><%= @item.price %></div>
        </div>



  <%= f.select :item_id, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4]], { include_blank: true, selected: 1 }, { id: "item_id", class: "item_class" } %>




<div><%= f.submit "カートに入れる", class: "btn btn-success" %></div>

</div>
    </div>
  </div>


<% end %>
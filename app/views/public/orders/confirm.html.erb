<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">注文情報確認</div>
    </div>
  </div>

<div class="container">
    <div class="row">

      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          <th colspan="3"></th>
          </tr>
        </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %>円</td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %>円</td>
      </tr>
    <% end %>
  </tbody>
  </div>


<%= form_with model: @order, url: public_orders_complete_path do |f| %>

    <table border="1" style="border-collapse: collapse">
      <tr>
        <th bgcolor = "lavender">送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th bgcolor = "lavender">商品合計</th>
        <td></td>
      </tr>
      <tr>
        <th bgcolor = "lavender">請求金額</th>
      <td><%= @order.total_payment %></td>
      </tr>

    </table>
    </div>



<div class="container">
    <div class="row">
      <h4>支払方法</h4>
      <%= @order.payment_method_i18n %>
    </div>
  </div>
<div class="container">
    <div class="row">
      <h4>お届け先</h4>
      〒<%= @order.postal_code %>
        <%= @order.address %><br />
        <%= @order.name %>
    </div>
</div>
<%= f.hidden_field :order_id, :value => @order.id %>

<div class="container">
    <div class="row">
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    </div>
</div>

<% end %>
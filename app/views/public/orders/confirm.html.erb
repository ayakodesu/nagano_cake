<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">注文情報確認</div>
    </div>
  </div>


  <table border="1" style="border-collapse: collapse">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <tr>

      <% @cart_items.each do |cart_item| %>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %>円</td>
        <td>
        <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch do |f| %>
        <%= f.select :amount, *[1..10] %>

        <% end %>
        </td>
      <% end %>
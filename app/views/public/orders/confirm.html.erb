<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">注文情報確認</div>
    </div>
  </div>

<div class="container">
    <div class="row">

      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          <th colspan="3"></th>
          </tr>
        </thead>
      <% total = 0 %>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %>円</td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %>円</td>
        <% total += cart_item.subtotal %>
      </tr>
<% end %>
  </tbody>
  </div>




    <table border="1" style="border-collapse: collapse">
      <tr>
        <th bgcolor = "lavender">送料</th>
        <td><%= @order.shipping_cost %>円</td>
      </tr>

      <tr>
        <th bgcolor = "lavender">商品合計</th>
          <td><%= total %>円</td>
      </tr>

      <tr>
        <th bgcolor = "lavender">請求金額</th>
      <td><%= @order.shipping_cost + total %>円</td>
      </tr>

    </table>
    </div>



<div class="container">
    <div class="row">
      <h4>支払方法</h4>
      <%= @order.payment_method_i18n %>
    </div>
  </div>
<div class="container">
    <div class="row">
      <h4>お届け先</h4>
      〒<%= @order.postal_code %>
        <%= @order.address %><br />
        <%= @order.name %>
    </div>
</div>


<div class="container">
    <div class="row">
      <%= form_with model: @order, url: public_orders_complete_path do |f| %>

        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :payment_method_i18n, :value => @order.payment_method_i18n %>
        <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>


      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    </div>
</div>

<% end %>
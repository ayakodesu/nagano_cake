<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="p-3 mb-2 bg-secondary text-light">新規会員登録</div>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

 <div class="container">

    <div class="row mb-3">
      <div class="col-2"><%= f.label :名前 %></div>
      <div class="col-mr-2"><%= f.text_field :last_name %></div>
      <div class="col-4"><%= f.text_field :first_name %></div>
    </div>

  <div class="row mb-3">
    <div class="col-2"><%= f.label :フリガナ %></div>
      <div class="col-mr-2"><%= f.text_field :last_name_kana %></div>
      <div class="col-3"><%= f.text_field :first_name_kana %></div>
    </div>


<div class="row mb-3">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<div class="field">
  <%= f.label :郵便番号 %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :住所 %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :電話番号 %>
  <%= f.text_field :telephone_number %>
</div>


  <div class="container text-center">
    <div class="row mb-3">
      <div class="col-md">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  </div>
  </div>

  <div class="container text-center">
    <div class="row mb-3">
      <div class="col-md">
    <%= f.label :パスワード %> (確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </div>
  </div>


<div class="container text-center">
    <div class="row mb-3">
      <div class="col-md">
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  </div>
  </div>


<% end %>

<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="p-3 mb-2 bg-primary text-light">既に登録済みの方</div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 pb-5 mx-auto">
        <div class="text-center"
          <div><%= link_to "こちら",  new_customer_session_path %>からログインを行ってください。</div>
      </div>
    </div>
  </div>

